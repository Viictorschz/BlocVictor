<Window x:Class="BlocVictor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bloc de Notas" Height="400" Width="600">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Archivo">
                <MenuItem Header="Abrir TXT" Click="Abrir_Click"/>
                <MenuItem Header="Guardar TXT" Click="Guardar_Click"/>
                <MenuItem Header="Borrar Texto" Click="Borrar_Click"/>
            </MenuItem>
        </Menu>
        <TextBox x:Name="textBox" AcceptsReturn="True" AcceptsTab="True" TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Margin="10"/>
    </DockPanel>
</Window>